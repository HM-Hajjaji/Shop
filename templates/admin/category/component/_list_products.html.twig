<section class="content shadow-lg">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Products</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                {#<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>#}
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 19%">
                        Product Name
                    </th>
                    <th style="width: 20%">
                        Product Photo
                    </th>
                    <th style="width: 30%">
                        Product Description
                    </th>
                    <th style="width: 5%" class="text-center">
                        Price
                    </th>
                    <th style="width: 10%" class="text-center">
                        Category
                    </th>
                    <th style="width: 5%" class="text-center">
                        Quantity
                    </th>
                    <th style="width: 10%">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>
                            #
                        </td>
                        <td>
                            {{ product.name|title }}
                        </td>
                        <td>
                            <img alt="{{ product.name }}" class="table-avatar w-50" src="{{ asset('uploads'~product.photo) }}">
                        </td>
                        <td>
                            {{ product.description|title }}
                        </td>
                        <td class="project-state">
                            <span class="badge badge-warning">{{ product.price }} DH</span>
                        </td>
                        <td class="project-state">
                            <span class="badge badge-success">{{ product.category.name|title }}</span>
                        </td>
                        <td class="project-state">
                            <span class="badge badge-danger">{{ product.quantity }}</span>
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <a class="nav-link" data-toggle="dropdown" href="#">
                                    <i class="fa fa-chevron-circle-down"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ path('app_product_show', {'slug': product.slug}) }}" class="dropdown-item bg-primary">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ path('app_product_edit', {'slug': product.slug}) }}" class="dropdown-item bg-info">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    {{ include('admin/product/_delete_form.html.twig',{'slug':product.slug}) }}
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
        <div class="card-footer">
            {{ knp_pagination_render(products) }}
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>