{% extends 'admin/index.html.twig' %}

{% block title %}Show Category{% endblock %}
{% block content_header %}
    {% embed 'admin/component/_content_header_page.html.twig' %}
        {% block sub_title %}Category Detail{% endblock %}
        {% block action %}
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#categoryNew">
                <i class="fa fa-plus mr-1"></i> New
            </button>
        {% endblock %}
    {% endembed %}
{% endblock %}
{% block content %}
<div class="card card-success shadow-lg mt-4">
    <div class="card-header">
        <h3 class="card-title">Category</h3>
    </div>
    <div class="card-body">
    <table class="table table-hover">
        <tbody>
            <tr>
                <th class="bg-success">Title</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th class="bg-success">Number Products</th>
                <td><span class="badge badge-info">{{ products|length }}</span></td>
            </tr>
            <tr>
                <th class="bg-success">Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="card-footer">
        <div class="project-actions">
            {{ render(path('app_category_edit',{'slug' : category.slug})) }}
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="{{ '#'~category.slug }}">
                <i class="fa fa-edit mr-1"></i> Edit
            </button>
            <a class="btn btn-danger btn-sm" href="#">
                {{ include('admin/category/_delete_form.html.twig',{'slug' : category.slug}) }}
            </a>
            <button type="button" class="btn btn-secondary btn" data-toggle="modal" data-target="#productNew">
                <i class="fa fa-plus mr-1"></i> New Product
            </button>
        </div>
    </div>
</div>
    <div class="text-center my-2">
        <a class="btn btn-primary btn-sm" href="{{ path('app_category_index') }}">
            <i class="fas fa-arrow-left mr-1">
            </i>
            Back To List
        </a>
    </div>
    {{ include('admin/category/component/_list_products.html.twig') }}
{% endblock %}
