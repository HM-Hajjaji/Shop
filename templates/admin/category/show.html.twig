{% extends 'admin/index.html.twig' %}

{% block title %}Show Category{% endblock %}
{% block content_header %}
    {% embed 'admin/component/_content_header _Page_header.html.twig' %}
        {% block sub_title %}Category Detail{% endblock %}
        {% block action %}<a href="{{ path('app_category_new') }}" class="btn btn-sm btn-outline-success">Create new</a>{% endblock %}
    {% endembed %}
{% endblock %}
{% block content %}
<div class="card card-success shadow-lg mt-4">
    <div class="card-header">
        <h3 class="card-title">Category</h3>
    </div>
    <div class="card-body">
    <table class="table table-hover">
        <tbody>
            <tr>
                <th class="bg-success">Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th class="bg-success">Number Products</th>
                <td><span class="badge badge-info">{{ category.products|length }}</span></td>
            </tr>
            <tr>
                <th class="bg-success">Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
    </div>
    <div class="card-footer text-center">
        <div class="project-actions">

            <a class="btn btn-info btn" href="{{path('app_category_edit', {'slug': category.slug}) }}">
                <i class="fas fa-pencil-alt">
                </i>
                Edit
            </a>
            <a class="btn btn-danger btn-sm" href="#">
                {{ include('admin/category/_delete_form.html.twig') }}
            </a>
        </div>
    </div>
</div>
    <div class="text-center my-2">
        <a class="btn btn-primary btn-sm" href="{{ path('app_category_index') }}">
            <i class="fas fa-arrow-left mr-1">
            </i>
            Back To List
        </a>
    </div>
    {{ include('admin/category/component/_list_products.html.twig') }}
{% endblock %}
