{% extends 'admin/index.html.twig' %}

{% block title %}List Orders{% endblock %}
{% block content_header %}
    {% embed 'admin/component/_content_header_page.html.twig' %}
        {% block sub_title %}Orders{% endblock %}
    {% endembed %}
{% endblock %}
{% block content %}
    <section class="content shadow-lg">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Orders</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                {# <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                                                <i class="fas fa-times"></i>
                                                        </button> #}
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 29%">
                            Date
                        </th>
                        <th style="width: 30%">
                            Products Photos
                        </th>
                        <th style="width: 10%" class="text-center">
                            Total
                        </th>
                        <th style="width: 10%" class="text-center">
                            Delivery Speed
                        </th>
                        <th style="width: 10%" class="text-center">
                            Status
                        </th>
                        <th style="width: 5%" class="text-center">
                            Payment Methods
                        </th>
                        <th style="width: 5%" class="text-center">
                            Count Products
                        </th>
                        <th style="width: 10%">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <span class="badge badge-danger">{{ order.date|date('Y-m-d') }}</span>
                            </td>
                            <td>
                                {%for detail in order.getListProducts() %}
                                    <img alt="{{ detail.getEntityProduct().name }}" class="table-avatar w-25"
                                         src="{{ asset('uploads'~detail.getEntityProduct().photo) }}">
                                {% endfor %}

                            </td>
                            <td class="project-state">
                                <span class="badge badge-warning">{{ order.total }} DH</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-dark">{{ order.deliverySpeed|title }}</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">{{ order.status|title }}</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-danger">{{ order.paymentMethods|title }}</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-info">{{ order.getListProducts()|length}}</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group mr-2" role="group" aria-label="First group">
                                    <a href="{{ path('app_order_show', {'slug': order.slug}) }}" type="button" class="btn btn-outline-primary"><i class="fa fa-eye"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="card-footer">
                {{ knp_pagination_render(orders) }}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
{% endblock %}
