<form method="post" action="{{ path('app_product_delete', {'slug': slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ slug) }}">
    <button class="dropdown-item bg-danger">
        <i class="fas fa-trash">
        </i>
        Delete
    </button>
</form>
