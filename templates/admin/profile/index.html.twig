{% extends 'admin/index.html.twig' %}

{% block title %}Profile{% endblock %}

{% block content_header %}
    {% embed 'admin/component/_content_header_page.html.twig' %}
        {% block sub_title %}Profile{% endblock %}
    {% endembed %}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-3">
                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            {% if app.user.profile %}
                                {% if app.user.profile.photo %}
                                    <div class="text-center">
                                        <img class="profile-user-img img-fluid img-circle"
                                             src="{{ asset('uploads'~ app.user.profile.photo) }}"
                                             alt="User profile picture">
                                    </div>
                                {% else %}
                                    <div class="text-center">
                                        <img class="profile-user-img img-fluid img-circle"
                                             src="{{ asset('uploads/logo/user.jpg') }}"
                                             alt="User profile picture">
                                    </div>
                                {% endif %}
                            {% else %}
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="{{ asset('uploads/logo/user.jpg') }}"
                                         alt="User profile picture">
                                </div>
                            {% endif %}
                            <h3 class="profile-username text-center">{{ app.user.name|title }}</h3>

                            <p class="text-muted text-center">{{ app.user.email|title }}</p>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
        <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link" href="#profile" data-toggle="tab">Profile</a>
                                </li>
                                <li class="nav-item"><a class="nav-link active" href="#password" data-toggle="tab">Change Password</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane" id="profile">
                                    {# <form class="form-horizontal">
                                        <div class="form-group row">
                                            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control" id="inputName" placeholder="Name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                                            <div class="col-sm-10">
                                                <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputName2" class="col-sm-2 col-form-label">Name</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="inputName2" placeholder="Name">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputExperience" class="col-sm-2 col-form-label">Experience</label>
                                            <div class="col-sm-10">
                                                <textarea class="form-control" id="inputExperience" placeholder="Experience"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputSkills" class="col-sm-2 col-form-label">Skills</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="inputSkills" placeholder="Skills">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <div class="checkbox">
                                                    <label>
                                                        <input type="checkbox"> I agree to the <a href="#">terms and conditions</a>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <button type="submit" class="btn btn-danger">Submit</button>
                                            </div>
                                        </div>
                                    </form> #}
                                    {{ form(form_profile) }}
                                </div>

                                <div class="active tab-pane" id="password">
                                    {{ form_start(form_password) }}
                                    {{ include('component/_massage.html.twig') }}
                                    <div class="input-group justify-content-center mb-2">
                                        {{ form_row(form_password.courant,{'attr': {'class': 'form-control','placeholder' : 'Courant Password'}}) }}
                                        <div class="input-group-append mb-3">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group justify-content-center mb-2">
                                        {{ form_row(form_password.newPassword.first,{'attr': {'class': 'form-control','placeholder' : 'New Password'}}) }}
                                        <div class="input-group-append mb-3">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group justify-content-center mb-2">
                                        {{ form_row(form_password.newPassword.second,{'attr': {'class': 'form-control','placeholder' : 'Retype password'}}) }}
                                        <div class="input-group-append mb-3">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    {{ form_row(form_password.submit,{'attr':{'class': 'btn btn-primary'},'label' : 'Save'}) }}
                                    {{ form_end(form_password) }}
                                </div>
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
    </div>
            <!-- /.col -->
{% endblock %}