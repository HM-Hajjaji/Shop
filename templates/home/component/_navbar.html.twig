<!-- Navbar -->
<nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
    <div class="container">
        {% embed 'component/_app_logo.html.twig' %}
            {% block class_logo %}navbar-brand{% endblock %}
        {% endembed %}
        <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse order-3" id="navbarCollapse">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_home') }}" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_shop') }}" class="nav-link">Shop</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_contact') }}" class="nav-link">Contact</a>
                </li>
            </ul>

            <!-- SEARCH FORM -->
            <form class="form-inline ml-0 ml-md-3" action="{{ path('app_search') }}">
                <div class="input-group input-group-sm">
                    <input class="form-control form-control-navbar" name="search" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Right navbar links -->
        <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
            <!-- Messages Dropdown Menu -->
            {% if app.user %}
                {{ include('component/_dropdown_link_user.html.twig') }}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_cart_index') }}" role="button" data-toggle="tooltip" data-placement="top" title="My Cart">
                            <i class="fas fa-cart-plus"></i>
                            <span class="badge badge-success navbar-badge">{{ app.session.get('cart')|length }}</span>
                        </a>
                    </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_user_wishlist') }}" role="button" title="Wishlist">
                        <i class="far fa-heart"></i>
                        <span class="badge badge-success navbar-badge">{{ app.user.wishlist|length }}</span>
                    </a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}" role="button" data-toggle="tooltip" data-placement="top" title="Log In">
                        <i class="fas fa-sign-in-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}" role="button" data-toggle="tooltip" data-placement="top" title="Register">
                        <i class="fas fa-user-plus"></i>
                    </a>
                </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
            <!-- Notifications Dropdown Menu -->
        </ul>
    </div>
</nav>
<!-- /.navbar -->