{% extends 'base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}
    {{ include('home/component/_navbar.html.twig') }}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{% block sub_title %}Products{% endblock %}</h1>
                    </div><!-- /.col -->
                    {#<div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Layout</a></li>
                            <li class="breadcrumb-item active">Top Navigation</li>
                        </ol>
                    </div><!-- /.col -->#}
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <div class="content">
            <div class="container">
                {% block content %}
                  {#  <div id="carouselExampleIndicators" class="carousel slide my-3" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="img-fluid"  src="{{ asset('/uploads/logo/marketplaces-and-ecommerce-integration.1.0.jpg') }}" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 h-75" src="{{ asset('/uploads/logo/marketplaces-and-ecommerce-integration.1.0.jpg') }}" alt="Second slide" >
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100 h-75" src="{{ asset('/uploads/logo/marketplaces-and-ecommerce-integration.1.0.jpg') }}" alt="Third slide" >
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>#}
                    <section class="content">
                        <!-- Default box -->
                        <div class="card card-solid">
                            <div class="card-body pb-0">
                                <div class="row">
                                    <div class="col-md-2  ">
                                        {% for category in categorise %}
                                            <div class="rounded shadow-lg my-2">
                                                <a href="{{ path('app_home_filter',{'slug' : category.slug}) }}" class="dropdown-item">{{ category.name|title }}</a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div class="col-md-10  row justify-content-center">
                                        {% for product in products %}
                                            {#<div class="col-12 col-sm-4 col-md-3 d-flex align-items-stretch flex-column">

                                            </div>#}
                                            <div class="card bg-light d-flex col-12 col-md-3 m-1">
                                                <div class="card-header text-muted border-bottom-0">
                                                    {{ product.category.name|title }}
                                                </div>
                                                <div class="card-body pt-0">
                                                    <div class="row">
                                                        <div class="col-7">
                                                            <h2 class="lead"><b> {{ product.name|title }}</b></h2>
                                                            <p class="text-muted text-sm"> {{ product.description|title }}</p>
                                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-dollar-sign"></i></span> <h6><span class="badge bg-success">{{ product.price }}</span></h6></li>
                                                                {%if product.discount %}
                                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-percentage"></i></span> <h6><span class="badge bg-danger">{{ product.discount }}</span></h6></li>
                                                                {% endif %}
                                                            </ul>
                                                        </div>
                                                        <div class="col-5 text-center">
                                                            <img src="{{ asset('uploads'~product.photo) }}" alt="user-avatar" class="img-circle img-fluid">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="card-footer">
                                                    <div class="text-right">
                                                        <a href="{{ path('app_product_show',{'slug':product.slug}) }}" class="btn btn-block btn-sm bg-teal">
                                                            <i class="fas fa-cart-plus"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        {% else %}
                                            <div>
                                                <strong>No Records Found</strong>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <nav aria-label="Contacts Page Navigation">
                                    {{ knp_pagination_render(products) }}
                                </nav>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->

                    </section>

                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
