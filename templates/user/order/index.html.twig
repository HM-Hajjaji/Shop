{% extends 'home/shop.html.twig' %}

{% block title %}Orders{% endblock %}
 {% block sub_title %}Orders{% endblock %}
{% block content %}
    <section class="content shadow-lg">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Orders</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    {# <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                                                <i class="fas fa-times"></i>
                                                        </button> #}
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 29%">
                            Date
                        </th>
                        <th style="width: 30%">
                            Products Photos
                        </th>
                        <th style="width: 10%" class="text-center">
                            Total
                        </th>
                        <th style="width: 10%" class="text-center">
                            Delivery Speed
                        </th>
                        <th style="width: 10%" class="text-center">
                            Status
                        </th>
                        <th style="width: 10%" class="text-center">
                            Count Products
                        </th>
                        <th style="width: 10%">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <span class="badge badge-danger">{{ order.date|date('Y-m-d') }}</span>
                            </td>
                            <td>
                                {%for detail in order.getListProducts() %}
                                    <img alt="{{ detail.getEntityProduct().name }}" class="table-avatar img-size-64"
                                         src="{{ asset('uploads'~detail.getEntityProduct().photo) }}">
                                {% endfor %}

                            </td>
                            <td class="project-state">
                                <span class="badge badge-warning">{{ order.total }} DH</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-dark">{{ order.deliverySpeed|title }}</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">{{ order.status|title }}</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-info">{{ order.getListProducts()|length}}</span>
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <a class="nav-link" data-toggle="dropdown" href="#">
                                        <i class="fa fa-chevron-circle-down"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                        <div class="dropdown-divider"></div>
                                        <a href="{{ path('app_user_order', {'slug': order.slug}) }}" class="dropdown-item bg-primary">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        {#<div class="dropdown-divider"></div>
                                        {{ include('admin/product/_delete_form.html.twig',{'slug':order.slug}) }}#}
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="card-footer">
              {#  {{ knp_pagination_render(orders) }}#}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
{% endblock %}