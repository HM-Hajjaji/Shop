{% extends 'home/index.html.twig' %}

{% block title %}Cart{% endblock %}
 {% block sub_title %}Show My Cart{% endblock %}
{% block content %}
    <section class="content shadow-lg">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">My Products</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    {# <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button> #}
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 19%">
                            Product Name
                        </th>
                        <th style="width: 20%">
                            Product Photo
                        </th>
                        <th style="width: 5%" class="text-center">
                            Price
                        </th>
                        <th style="width: 10%" class="text-center">
                            Date
                        </th>
                        <th style="width: 5%" class="text-center">
                            Quantity
                        </th>
                        <th style="width: 10%">
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set total = 0 %}
                    {% for label,item in cart %}
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                {{ item.product.name|title }}
                            </td>
                            <td>
                                <img alt="{{ item.product.name }}" class="table-avatar w-50"
                                     src="{{ asset('uploads'~item.product.photo) }}">
                            </td>
                            <td class="project-state">
                                <span class="badge badge-warning">{{ item.price }} DH</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">{{ item.date|date('Y-m-d H:i:s') }}</span>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-danger">{{ item.quantity }}</span>
                            </td>
                            <td class="text-center">
                                <div class="dropdown">
                                    <a class="nav-link" data-toggle="dropdown" href="#">
                                        <i class="fa fa-chevron-circle-down"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                        {#<div class="dropdown-divider"></div>
                                        <a href="#"
                                           class="dropdown-item bg-info">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>#}
                                        <div class="dropdown-divider"></div>
                                        <a href="{{ path('app_user_product_cart_delete',{'label' : label}) }}"
                                           class="dropdown-item bg-danger">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% set total = total + item.price %}
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer row">
                <div class="col-6">
                    <a href="{{ path('app_user_shop',{'total' : total}) }}" class="btn btn-primary"><i class="fa fa-store"></i> Shop New</a>
                </div>
                <div class="col-6 text-right">
                    <h3 class="text-black-50">{{ total }} <i class="fa fa-money-bill"></i></h3>
                </div>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
{% endblock %}