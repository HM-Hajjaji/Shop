                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="{{ asset('uploads'~ app.user.profile.photo) }}"
                                         alt="User profile picture">
                                </div>
                            {% else %}
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid img-circle"
                                         src="{{ asset('uploads/logo/user.jpg') }}"
                                         alt="User profile picture">
                                </div>
                            {% endif %}
